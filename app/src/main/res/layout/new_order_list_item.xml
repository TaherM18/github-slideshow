<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_constraint"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/living_24"
        app:tint="#fece2f" />

    <TextView
        android:id="@+id/hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="#"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/hash"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="0"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:text="â‚¹ 2700.0"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtPayMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrice"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:paddingRight="8dp"
        android:text="COD"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/txtItemQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:layout_below="@id/txtOrderId"
        android:fontFamily="@font/antic"
        android:includeFontPadding="false"
        android:text="2 Items"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtItemQty"
        android:layout_toEndOf="@id/image"
        android:fontFamily="@font/antic"
        android:includeFontPadding="false"
        android:paddingTop="8dp"
        android:layout_marginRight="8dp"
        android:text="Daboly road char rasta, vyara, songadh"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtAddress"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_toEndOf="@id/image"
        android:backgroundTint="#26d07c"
        android:text="Accept" />

