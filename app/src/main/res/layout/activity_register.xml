<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece2f"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:includeFontPadding="false"
                android:text="Welcome"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antic"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:text="SignUp to start your new journey"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytFname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Firstname Lastname"
                app:startIconDrawable="@drawable/account_circle_24"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtFname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghigklmnopqrstuvwxyz "
                    android:inputType="textCapWords"
                    android:maxLength="60"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>
            <!--    Full Name    -->

            <!--    Contact    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytCont"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact"
                app:startIconDrawable="@drawable/call_24"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:counterTextColor="@color/common_google_signin_btn_text_light"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Email    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Driving License    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytLicense"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Driving license"
                app:startIconDrawable="@drawable/badge_24"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ123456790"
                    android:inputType="textCapCharacters"
                    android:maxLength="13"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Vehicle Number    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytVehicle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehicle Number"
                app:startIconDrawable="@drawable/local_shipping_24"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ123456790"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:maxLength="10" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Address    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytaAdress"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street Address"
                app:startIconDrawable="@drawable/home_24px"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghigklmnopqrstuvwxyz1234567890, "
                    android:inputType="text"
                    android:maxLength="50"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Pin Code    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytPincode"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pincode"
                app:counterEnabled="true"
                app:counterMaxLength="6"
                app:startIconDrawable="@drawable/ic_baseline_dialpad_24"
                app:counterTextColor="@color/common_google_signin_btn_text_light"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="123456790"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--    City        -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bungee"
                android:includeFontPadding="false"
                android:text="Select City"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_background" />

            <!--     Work Time       -->
            <RadioGroup
                android:id="@+id/rdoGrpWorkTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bungee"
                    android:includeFontPadding="false"
                    android:text="Work Time :"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rdoPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:fontFamily="@font/bungee"
                    android:text="Part-Time (4 hours, 4pm to 8pm)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:buttonTint="@color/design_default_color_primary"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rdoFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:text="Full-Time (10 hours, 10 am to 8 pm)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:buttonTint="@color/design_default_color_primary"/>
            </RadioGroup>

            <!--    Password    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytPass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/key_24px"
                app:passwordToggleTint="@color/common_google_signin_btn_text_light"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Confirm Password    -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytConfirm"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                app:startIconDrawable="@drawable/lock_24px"
                app:startIconTint="@color/common_google_signin_btn_text_light"
                app:boxStrokeColor="@color/common_google_signin_btn_text_light"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                app:boxStrokeErrorColor="@color/design_default_color_error"
                app:errorIconTint="@color/design_default_color_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:elevation="0dp"
                android:text="Forgot Password?"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#000"
                android:text="GO"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnOldUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:elevation="0dp"
                android:text="Already a User? Sign In"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>